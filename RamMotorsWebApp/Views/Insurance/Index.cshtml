@using RamMotorsWebApp.Models.ViewModels
@model InsuranceInquiryViewModel
@{
    ViewData["Title"] = "Insurance Services - Ram Motors";
}

<!-- Hero Section -->
<div class="py-5 text-center text-white" style="background: linear-gradient(135deg, #0d6efd, #20c997); border-radius: 0 0 30px 30px;">
    <h1 class="display-4 fw-bold">Insurance Services</h1>
    <p class="lead mb-0">Reliable, quick, and affordable insurance for your vehicles.</p>
</div>

<div class="container mt-5">
    <!-- Insurance Types -->
    <div class="row text-center mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 transition-card">
                <div class="card-header bg-gradient p-0" style="background: linear-gradient(90deg, #0d6efd, #20c997); height: 5px;"></div>
                <img src="/images/car-insurance.png" class="card-img-top p-3" alt="Car Insurance" style="height: 180px; object-fit: contain;" />
                <div class="card-body">
                    <h5 class="card-title fw-bold text-primary">Car Insurance</h5>
                    <p class="card-text text-muted">Comprehensive protection for your car against accidents, theft, and natural disasters.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 transition-card">
                <div class="card-header bg-gradient p-0" style="background: linear-gradient(90deg, #20c997, #0dcaf0); height: 5px;"></div>
                <img src="/images/bike-insurance.png" class="card-img-top p-3" alt="Bike Insurance" style="height: 180px; object-fit: contain;" />
                <div class="card-body">
                    <h5 class="card-title fw-bold text-success">Two-Wheeler Insurance</h5>
                    <p class="card-text text-muted">Hassle-free and affordable insurance plans with instant policy issuance.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 transition-card">
                <div class="card-header bg-gradient p-0" style="background: linear-gradient(90deg, #6610f2, #20c997); height: 5px;"></div>
                <img src="/images/commercial-insurance.png" class="card-img-top p-3" alt="Commercial Insurance" style="height: 180px; object-fit: contain;" />
                <div class="card-body">
                    <h5 class="card-title fw-bold text-warning">Commercial Vehicle Insurance</h5>
                    <p class="card-text text-muted">Tailored solutions to safeguard your business fleet with third-party liability coverage.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Inquiry Form -->
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-white rounded-top-4" style="background: linear-gradient(135deg, #0d6efd, #6610f2);">
            <h4 class="mb-0">Get an Insurance Quote</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Inquiry" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control rounded-pill" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-semibold"></label>
                        <input asp-for="Email" class="form-control rounded-pill" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label fw-semibold"></label>
                        <input asp-for="Phone" class="form-control rounded-pill" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="InsuranceType" class="form-label fw-semibold"></label>
                        <select asp-for="InsuranceType" class="form-select rounded-pill">
                            <option value="">-- Select --</option>
                            <option>Car Insurance</option>
                            <option>Two-Wheeler Insurance</option>
                            <option>Commercial Vehicle Insurance</option>
                        </select>
                        <span asp-validation-for="InsuranceType" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Message" class="form-label fw-semibold"></label>
                    <textarea asp-for="Message" class="form-control rounded-3" rows="4"></textarea>
                </div>

                <button type="submit" class="btn btn-gradient px-4 py-2 fw-semibold rounded-pill">
                    Submit Inquiry
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- Extra Styles -->
<style>
    .transition-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .transition-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

    .btn-gradient {
        background: linear-gradient(135deg, #20c997, #0d6efd);
        color: white;
        border: none;
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #0dcaf0, #6610f2);
            color: white;
        }
</style>
