@model RtoRequest
@{
    ViewData["Title"] = "RTO Services";
}

<section class="container py-5">
    <h2 class="text-center mb-4">RTO Services</h2>
    <p class="text-center text-muted">We provide hassle-free RTO-related services for your vehicle. Fill out the form below to get started.</p>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["Success"]
        </div>
    }

    <div class="row mt-4">
        <div class="col-md-6">
            <h4>Our RTO Services Include:</h4>
            <ul>
                <li>Vehicle Registration</li>
                <li>Ownership Transfer</li>
                <li>Duplicate RC Issuance</li>
                <li>Address Change in RC</li>
                <li>Hypothecation Removal</li>
                <li>Road Tax Payment Assistance</li>
            </ul>
        </div>

        <div class="col-md-6">
            <h4>Request RTO Service</h4>
            <form asp-action="Submit" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ServiceType" class="form-label">Service Type</label>
                    <select asp-for="ServiceType" class="form-select">
                        <option value="">Select Service</option>
                        <option>Vehicle Registration</option>
                        <option>Ownership Transfer</option>
                        <option>Duplicate RC</option>
                        <option>Address Change</option>
                        <option>Hypothecation Removal</option>
                        <option>Road Tax Payment</option>
                    </select>
                    <span asp-validation-for="ServiceType" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="VehicleNumber" class="form-label">Vehicle Number (Optional)</label>
                    <input asp-for="VehicleNumber" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Message" class="form-label">Additional Details</label>
                    <textarea asp-for="Message" class="form-control" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100">Submit Request</button>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
