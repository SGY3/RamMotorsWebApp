@model Car

@{
    ViewData["Title"] = "Car Details";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-3 overflow-hidden">
        <div class="row g-0">
            <!-- Car Image -->
            <div class="col-md-5 bg-light d-flex align-items-center">
                <img src="@Model.ImageUrl"
                     class="img-fluid rounded-start w-100"
                     style="height: 100%; max-height: 450px; object-fit: cover;"
                     alt="@Model.Title">
            </div>

            <!-- Car Info -->
            <div class="col-md-7">
                <div class="card-body p-4">
                    <h2 class="card-title fw-bold">@Model.Title</h2>
                    <h5 class="text-muted mb-4">@Model.Make @Model.Model</h5>

                    <div class="row g-3">
                        <div class="col-6"><i class="bi bi-calendar"></i> <strong>Reg:</strong> @Model.RegistrationMonth @Model.RegistrationYear</div>
                        <div class="col-6"><i class="bi bi-gear"></i> <strong>Manufacture:</strong> @Model.ManufactureYear</div>

                        <div class="col-6"><i class="bi bi-fuel-pump"></i> <strong>Fuel:</strong> @Model.FuelType</div>
                        <div class="col-6"><i class="bi bi-person-badge"></i> <strong>Owner:</strong> @Model.OwnerCount</div>

                        <div class="col-6"><i class="bi bi-speedometer"></i> <strong>KM Driven:</strong> @Model.KMDriven km</div>
                        <div class="col-6"><i class="bi bi-shield-check"></i> <strong>Insurance:</strong> @Model.Insurance</div>

                        <div class="col-6"><i class="bi bi-gear-wide-connected"></i> <strong>Transmission:</strong> @Model.Transmission</div>
                        <div class="col-6"><i class="bi bi-people"></i> <strong>Seats:</strong> @Model.Seats</div>

                        <div class="col-6"><i class="bi bi-lightning-charge"></i> <strong>Power:</strong> @Model.Power BHP</div>
                        <div class="col-6"><i class="bi bi-cpu"></i> <strong>Displacement:</strong> @Model.Displacement cc</div>

                        <div class="col-6"><i class="bi bi-graph-up"></i> <strong>Mileage:</strong> @Model.Mileage km/l</div>
                        <div class="col-6"><i class="bi bi-arrows-expand"></i> <strong>Ground Clearance:</strong> @Model.GroundClearance</div>
                    </div>

                    <hr class="my-4">

                    <h3 class="text-success fw-bold">₹ @Model.Price.ToString("N2")</h3>

                    @if (Model.IsFeatured)
                    {
                        <span class="badge bg-warning text-dark px-3 py-2">⭐ Featured</span>
                    }

                    <div class="mt-4 d-flex gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
                        <button type="button" class="btn btn-primary px-4" data-bs-toggle="modal" data-bs-target="#requestDetailsModal">
                            <i class="bi bi-envelope"></i> Request Details
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Request Details Modal -->
<div class="modal fade" id="requestDetailsModal" tabindex="-1" aria-labelledby="requestDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg border-0 rounded-3">
            <form asp-action="SendRequestDetails" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="requestDetailsModalLabel"><i class="bi bi-envelope-paper"></i> Request Car Details</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <input type="hidden" name="CarId" value="@Model.Id" />

                    <div class="mb-3">
                        <label for="Name" class="form-label">Your Name</label>
                        <input type="text" class="form-control rounded-2" name="Name" required />
                    </div>
                    <div class="mb-3">
                        <label for="Phone" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control rounded-2" name="Phone" required />
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email Address</label>
                        <input type="email" class="form-control rounded-2" name="Email" required />
                    </div>
                    <div class="mb-3">
                        <label for="Message" class="form-label">Additional Message</label>
                        <textarea class="form-control rounded-2" name="Message" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light border" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Send Request</button>
                </div>
            </form>
        </div>
    </div>
</div>
