@model Car

@{
    ViewData["Title"] = "Car Details";
}

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="row g-0">
            <div class="col-md-5">
                <img src="@Model.ImageUrl" class="img-fluid rounded-start w-100" style="height: 100%; max-height: 400px; object-fit: cover;" alt="@Model.Title">
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <h3 class="card-title">@Model.Title</h3>
                    <h5 class="text-muted mb-3">@Model.Make @Model.Model</h5>

                    <div class="row mb-2">
                        <div class="col-6"><strong>Registration:</strong> @Model.RegistrationMonth @Model.RegistrationYear</div>
                        <div class="col-6"><strong>Manufacture Year:</strong> @Model.ManufactureYear</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-6"><strong>Fuel Type:</strong> @Model.FuelType</div>
                        <div class="col-6"><strong>Owner Count:</strong> @Model.OwnerCount</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-6"><strong>KM Driven:</strong> @Model.KMDriven km</div>
                        <div class="col-6"><strong>Insurance:</strong> @Model.Insurance</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-6"><strong>Transmission:</strong> @Model.Transmission</div>
                        <div class="col-6"><strong>Seats:</strong> @Model.Seats</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-6"><strong>Power:</strong> @Model.Power BHP</div>
                        <div class="col-6"><strong>Displacement:</strong> @Model.Displacement cc</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-6"><strong>Mileage:</strong> @Model.Mileage km/l</div>
                        <div class="col-6"><strong>Ground Clearance:</strong> @Model.GroundClearance</div>
                    </div>
                    
                    <h4 class="text-success mt-4">₹ @Model.Price.ToString("N2")</h4>

                    @if (Model.IsFeatured)
                    {
                        <span class="badge bg-warning text-dark">Featured</span>
                    }

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#requestDetailsModal">
                            Request Details
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Request Details Modal -->
<div class="modal fade" id="requestDetailsModal" tabindex="-1" aria-labelledby="requestDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="SendRequestDetails" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="requestDetailsModalLabel">Request Car Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="CarId" value="@Model.Id" />

                    <div class="mb-3">
                        <label for="Name" class="form-label">Your Name</label>
                        <input type="text" class="form-control" name="Name" required />
                    </div>
                    <div class="mb-3">
                        <label for="Phone" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" name="Phone" required />
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" name="Email" required />
                    </div>
                    <div class="mb-3">
                        <label for="Message" class="form-label">Additional Message</label>
                        <textarea class="form-control" name="Message" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Send Request</button>
                </div>
            </form>
        </div>
    </div>
</div>



